{
    "name": "data-visualizer",
    "description": "DHIS2 Data Visualizer",
    "private": true,
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@dhis2/d2-i18n-extract": "^1.0.6",
        "@dhis2/d2-i18n-generate": "^1.0.18",
        "babel-preset-env": "^1.6.1",
        "babel-preset-stage-0": "^6.24.1",
        "create-react-class": "^15.6.3",
        "enzyme": "^3.5.0",
        "enzyme-adapter-react-16": "^1.3.0",
        "eslint-config-prettier": "^3.0.1",
        "eslint-plugin-prettier": "^2.6.0",
        "husky": "^0.15.0-rc.12",
        "jest-enzyme": "^6.0.0",
        "lerna": "^3.1.4",
        "prettier": "^1.11.1",
        "react-stub-context": "^0.8.1"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "prebuild": "npm run lint && npm run prettier-ci && lerna exec -- rimraf ./build/*",
        "build": "lerna run build",
        "lint": "eslint ./packages",
        "prettier-ci": "prettier \"packages/*/src/{**/*,*}.js\" --list-different",
        "prettier-write": "prettier \"packages/*/src/{**/*,*}.js\" --write",
        "start": "lerna run --scope app start",
        "test": "jest",
        "coverage": "npm run test -- --coverage",
        "test-ci": "lerna exec --concurrency 1 -- yarn test-ci"
    },
    "workspaces": [
        "packages/*"
    ]
}
